<% content_for :meta_description do %>
  <%= t '.meta_description' %>
<% end %>
<section data-controller="weather" class="weather-container flex flex-col w-10/12 lg:w-8/12 lg:h-3/4 mx-auto mb-8 py-12">
  <div class="flex flex-col-reverse sm:flex-row justify-between items-start">
    <div class="flex flex-col w-full">
      <h1 class="font-bold"><%= t '.title' %></h1>
      <h2 class="mt-4 mb-14 italic"><%= t '.subtitle' %></h2>
      <form data-weather-target="form" data-action="submit->weather#insertResult" class="flex flex-col items-start w-full">
        <div class='flex flex-col items-start w-full mb-4'>
          <label for="search" class='font-semibold mb-2'><%= t '.label' %></label>
          <input data-weather-target="input" name="search" id="search" type="text" placeholder="Paris" class="w-full md:w-1/2" />
        </div>
        <input  type="submit" value="<%= t :validate %>" class='btn-beige'/>
        <p data-weather-target="error" class='text-red-500 mt-4 italic hidden'><%= t '.not_found' %></p>
      </form>
    </div>
    <%= image_tag 'weather.png', class: "max-h-32 md:max-h-40 mx-auto mb-2 opacity-30" %>
  </div>
  <table class="border border-solid mx-auto w-full mt-20">
    <tr class="border border-solid bg-beige">
      <th id="no_text" class="border border-solid w-1/3"></th>
      <!-- id for system test-->
      <th class="border border-solid p-2"><%= t '.eight' %></th>
      <th class="border border-solid p-2"><%= t '.fourteen' %></th>
      <th class="border border-solid p-2"><%= t '.twenty' %></th>
    </tr>
    <tr class="border border-solid">
      <td class="font-semibold border border-solid p-2 bg-beige"><%= t '.tendency' %></td>
      <td id="td_test" data-weather-target="tend8" class="border border-solid"></td>
      <!-- id for system test-->
      <td data-weather-target="tend14" class="border border-solid"></td>
      <td data-weather-target="tend20" class="border border-solid"></td>
    </tr>
    <tr class="border border-solid">
      <td class="font-semibold border border-solid p-2 bg-beige"><%= t '.temperature' %></td>
      <td data-weather-target="temp8" class="border border-solid text-center"></td>
      <td data-weather-target="temp14" class="border border-solid text-center"></td>
      <td data-weather-target="temp20" class="border border-solid text-center"></td>
    </tr>
    <tr class="border border-solid">
      <td class="font-semibold border border-solid p-2 bg-beige"><%= t '.probablity' %></td>
      <td data-weather-target="prev8" class="border border-solid p-2 text-center"></td>
      <td data-weather-target="prev14" class="border border-solid text-center"></td>
      <td data-weather-target="prev20" class="border border-solid text-center"></td>
    </tr>
    <tr class="border border-solid">
      <td class="font-semibold border border-solid p-2 bg-beige"><%= t '.wind' %></td>
      <td data-weather-target="wind8"class="border border-solid p-2 text-center"></td>
      <td data-weather-target="wind14" class="border border-solid text-center"></td>
      <td data-weather-target="wind20" class="border border-solid text-center"></td>
    </tr>
  </table>
</section>

