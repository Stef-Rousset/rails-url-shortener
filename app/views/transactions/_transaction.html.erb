<%= turbo_frame_tag transaction do %>
  <div class="flex flex-col h-fit w-full <%= cycle('bg-lightblue', 'bg-beige') %> border rounded p-4 my-1">
    <div class="flex justify-between items-center w-full">
      <h3 class="font-semibold mb-2"><%= l transaction.date %></h3>
      <% if transaction.checked %><i class="fa-solid fa-square-check"></i><% end %>
    </div>
    <div class="flex justify-between items-center w-full">
      <h4 class="font-semibold"><%= transaction.payee %></h4>
      <p class="font-semibold"><%= transaction.transaction_type == "credit" ? "+ " : "- " %><%= number_to_currency(transaction.amount) %></p>
    </div>
    <div data-controller="details" class='mt-4 w-full'>
      <button data-details-target="button", data-action="click->details#show" class="text-sm hover:underline"><%= t '.show_more' %></button>
      <div hidden>
        <div class="flex justify-between items-center">
        <div class="flex flex-col w-2/3">
          <p class="italic mt-2 text-sm">Description: <%= transaction.description.present? ? transaction.description : "pas de description" %></p>
          <p class="italic mt-2 text-sm">Catégorie: <%= transaction.category.present? ? transaction.category.name : "pas de catégorie" %></p>
        </div>
        <div class="flex w-1/3 justify-end">
          <%= link_to edit_account_transaction_path(@account, transaction), class: "mr-4" do %>
            <i class="fa-solid fa-pen-to-square"></i>
          <% end %>
          <%= link_to account_transaction_path(@account, transaction), data: { turbo_method: 'delete' } do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
        </div>
        </div>
        <button data-details-target='button' data-action='click->details#hide' class="text-sm mt-4 hover:underline"><%= t '.show_less' %></button>
      </div>
    </div>
  </div>
<% end %>
