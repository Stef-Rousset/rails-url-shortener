<div class="login-container flex flex-col w-8/12 h-3/4 mx-auto mt-16">
  <h2 class="font-bold mb-4">Connexion</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "font-semibold mb-1" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-1/2 mb-2 border rounded bg-beige" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "font-semibold mb-1" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "w-1/2 mb-2 border rounded bg-beige" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions my-4">
      <%= f.submit "Connexion", class: "bg-beige border rounded border-beige font-semibold w-fit p-2 hover:bg-darkblue hover:text-white" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  <%= link_to "Back", root_path, class: "bg-beige border rounded border-beige font-semibold w-fit mt-4 p-2 hover:bg-darkblue hover:text-white" %>
</div>
